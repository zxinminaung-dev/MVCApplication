@model MVCApplication.Models.Parent
<div class="row justify-content-center mt-5">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/Parent/Create">
                    <input type="text" asp-for="id" style="visibility:hidden;" class="form-control">
                    <div class="form-group mb-2">
                        <label>Father Name</label>
                        <input type="text" asp-for="father_name" class="form-control">
                        <span asp-validation-for="father_name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label>Mother Name</label>
                        <input type="text" asp-for="mother_name" class="form-control">
                        <span asp-validation-for="mother_name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label>Address</label>
                        <input type="text" asp-for="address" class="form-control">
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-end">
                       <div class="col-8 text-end">                            
                            <a type="button" class="btn btn-sm btn-outline-danger" href="/Parent">Cancel</a>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                       </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
