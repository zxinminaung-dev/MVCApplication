@model Class
<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/Class/Create">
                    <input type="text" asp-for="id" style="visibility:hidden;" class="form-control">
                    <div class="form-group mb-2">
                        <label>Name</label>
                        <input type="text" asp-for="name" class="form-control mt-1">
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label>Education Year</label>
                        <input type="text" asp-for="education_year" class="form-control mt-1">
                        <span asp-validation-for="education_year" class="text-danger"></span>
                    </div>                
                    <div class="row justify-content-end mt-1">
                        <div class="col-8 text-end">
                            <a type="button" class="btn btn-sm btn-outline-danger" href="/Class">Cancel</a>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>